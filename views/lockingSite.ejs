<body>

<!-- Navigation -->
<nav class="navbar navbar-expand-lg navbar-dark navbar-custom fixed-top">
    <div class="container">
        <a class="navbar-brand" href="/logout"><button  id="logout" type="button" class="btn btn-primary">Log out</button></a>
        <a class="navbar-brand" href="/returnHomePage"><button  id="returnHomePage" type="button" class="btn btn-primary">Go to homepage</button></a>

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
            <ul class="navbar-nav ml-auto">
            </ul>
        </div>
    </div>
</nav>

<header class="masthead text-center text-white">
    <div class="masthead-content">
        <div class="container ">
            <form action="/locking" method="post">

                <div class="form-group w-50">
                    <label for="lockingPassword"><h2>Locking the site to new settings</h2></label>
                    <input type="password" class="form-control" id="lockingPassword" name="lockingPassword" placeholder="please enter password" required minlength="8">
                </div>
                <div id="error" class="text-danger" ></div>
                <button id="lock" name="lock" type="submit" class="btn btn-primary">Lock</button>
            </form>
            <h2><%=errorMessage%></h2>
        </div>
    </div>
    <div class="bg-circle-1 bg-circle"></div>
    <div class="bg-circle-2 bg-circle"></div>
    <div class="bg-circle-3 bg-circle"></div>
    <div class="bg-circle-4 bg-circle"></div>
</header>

<!-- Footer -->
<footer class="py-5 bg-black">
    <div class="container">
        <p class="m-0 text-center text-white small">calanit &copy; madar</p>
    </div>
    <!-- /.container -->
</footer>

<!-- Bootstrap core JavaScript -->
<script src="vendor/jquery/jquery.min.js"></script>
