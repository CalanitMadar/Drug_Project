<header class="masthead text-center text-white">
    <div class="masthead-content">
        <div class="container">
            <form onsubmit="return allLetter();"  action="/registerContact" method="post">
                <h2 class="w-50">Personal contact information</h2>

                <div class="form-group w-50">
                    <label for="gmail">Email</label>
                    <input type="email" name="gmail" id="gmail" placeholder="Please enter the contact's email" class="form-control" required>
                </div>

                <div class="form-group w-50">
                    <label for="firstName">First Name</label>
                    <input type="text" class="form-control" name="firstName" id="firstName" placeholder="please enter first name" required>
                </div>

                <div class="form-group w-50">
                    <label for="lastName">Last Name</label>
                    <input type="text" class="form-control" name="lastName" id="lastName" placeholder="please enter last Name" required >
                </div>

                <div class="form-group w-50">
                    <label for="phone">phone</label>
                    <input type="number" class="form-control" name="phone" id="phone" placeholder="please enter phone" required >
                </div>

                <div class="form-group w-50">
                    <select id="selectType" name="selectType" class="form-select" aria-label="Default select example" style="width: 200px">
                        <option selected>Contact type</option>
                        <option value="doctor">doctor</option>
                        <option value="family member">family member</option>
                        <option value="A_close_therapist">A close therapist</option>
                    </select>
                </div>

                <div id="errorName" class="text-danger" ></div>
                <div id="errorPhone" class="text-danger" ></div>

                <input type="submit" value="submit">
            </form>
        </div>
    </div>
    <div class="bg-circle-1 bg-circle"></div>
    <div class="bg-circle-2 bg-circle"></div>
    <div class="bg-circle-3 bg-circle"></div>
    <div class="bg-circle-4 bg-circle"></div>
