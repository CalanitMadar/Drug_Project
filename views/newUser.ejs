<header class="masthead text-center text-white">
  <div class="masthead-content">
    <div class="container">
      <form onsubmit="return allLetter();"  action="/register" method="post">
        <h2 class="w-50">personal information</h2>

        <div class="form-group w-50">
          <label for="gmail">Email</label>
          <input type="email" name="gmail" id="gmail" placeholder="please enter your email" class="form-control" required>
        </div>

